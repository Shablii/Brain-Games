#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use function Brain\Games\Games\Progression\getQuestion;
use function Brain\Games\Games\Progression\getRightAnsver;
use function Brain\Games\Engine\brainEngine;

$question = fn() => getQuestion();
$rightAnsver = fn($question) => getRightAnsver($question);
$hello = 'Find the greatest common divisor of given numbers.';

brainEngine($question, $rightAnsver, $hello);
