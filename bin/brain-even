#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use function cli\line;
use function cli\prompt;

function brainEven()
{
    line('Welcome to the Brain Game!');
    $name = prompt('May I have your name?');
    line("Hello, %s!", $name);
    $maxMatch = 3;

    $hello = 'Answer "yes" if the number is even, otherwise answer "no".';
    line($hello);

    for ($i = 1; $i <= $maxMatch; $i++) {
        $randomNum = rand(1, 20);
        $ansver = prompt("Question: {$randomNum}");
        $rightAnswer = '';
        if ($randomNum % 2) {
            $rightAnswer = "no";
        } else {
            $rightAnswer = "yes";
        }

        if ($ansver === $rightAnswer) {
            line("Correct!");
        } else {
            return line("'%s' is wrong answer ;(. Correct answer was '%s'.", $ansver, $rightAnswer);
        }
    }
    return line("Congratulations, {$name}!"); 
}
brainEven();
